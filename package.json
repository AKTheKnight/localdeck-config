{
  "name": "macropad-config",
  "private": true,
  "scripts": {
    "build:configurator": "pnpm --filter=macropad-configurator build",
    "deploy:configurator": "shx mkdir -p ./dist && shx cp -r ./packages/macropad-configurator/{.output,homeassistant}/* ./dist/macropad_configurator",
    "configurator": "pnpm run build:configurator && pnpm run deploy:configurator"
  },
  "workspaces": [
    "packages/macropad-configurator"
  ],
  "devDependencies": {
    "shx": "^0.3.4"
  }
}
